<%= simple_form_for [@metric, @metric_value] do |f| %>

	<%= f.label :month %>
    <%= f.collection_select :month_id, Month.all, :id, :name %>
    <%= f.label :year, "Year" %>
    <%= f.select :year, ['2015','2016','2017'] %>
    <%= f.label :value, "Metric Value" %>
    <%= f.text_field :value %>
    <%= f.label :maturity_value_id, "Maturity Level" %>
    <%= f.collection_select :maturity_value_id, MaturityValue.all, :id, :name, :label => "Maturity Level" %>
    <%= f.hidden_field :metric_id, value: @metric.id %>    
    <%= f.button :submit, 'Create' %>

<% end %>

