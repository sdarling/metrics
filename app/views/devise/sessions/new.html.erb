<div class="container-fluid">
  	<div class="row">
    	<div class="col-xs-4 offset-xs-4">
      		<div class="card">
		        <h1 class="card-header text-xs-center" id="grey-bg"><i class="fa fa-sign-in" aria-hidden="true"></i></h1>
		        <div class="card-block text-xs-center">      
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
					  <div class="form-inputs">
					    <%= f.input :email, required: false, autofocus: true, label: false, :placeholder => "Email Address" %>
					    <%= f.input :password, required: false, :placeholder => "Password", label: false %>
					    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
					  </div>

					  <div class="form-actions">
					    <%= f.button :submit, "Log In" %>
					  </div>
					<% end %>

				</div>
			</div>
		</div>
	</div>
</div>
