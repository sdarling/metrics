<p id="notice"><%= notice %></p>

<p>
  <strong>Csf function:</strong>
  <%= link_to @csf_category.csf_function_name, csf_function_path(@csf_category.csf_function_id) %>
</p>

<p>
  <strong>Name:</strong>
  <%= @csf_category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @csf_category.description %>
</p>

<p>
  <strong>Abbreviation:</strong>
  <%= @csf_category.abbreviation %>
</p>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-3">
    	<table class="table">
	        <thead>
	          <tr>
	            <th class="text-xs-center">Metric Name</th>
	          </tr>
	        </thead>
	        <tbody>
	        <% @metrics.each do |metric| %>
	          <td class="text-xs-center"><%= link_to metric.name, metric %></td>
	        </tbody>
	        <% end %>
      	</table>
    </div>
  </div>
</div>